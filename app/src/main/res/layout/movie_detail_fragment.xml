<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.main.MainFragment">

    <TextView
        android:id="@+id/textview_detail_title"
        android:text="The most dangerous"
        style="@style/TextDetailTheme"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <TextView
        android:id="@+id/textview_detail_release_date"
        style="@style/TextDetailTheme"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="24dp"
        android:text="April 12th, 2019"
        app:layout_constraintTop_toBottomOf="@id/textview_detail_title"
        tools:layout_editor_absoluteX="0dp" />


    <ImageView
        android:id="@+id/imageview_detail"
        android:layout_width="0dp"
        android:layout_height="@dimen/movie_detail_height"
        android:foreground="@drawable/ripple_on_primary"
        android:scaleType="centerCrop"
        app:layout_constraintTop_toBottomOf="@id/textview_detail_release_date"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
